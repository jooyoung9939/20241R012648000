<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/lookbook_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back_button_from_lookbook_detail"
            android:src="@drawable/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lookbook_detail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="userid"
                    android:textSize="14dp"
                    android:textColor="#919191"
                    android:fontFamily="@font/notosanskr_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="님 의"
                    android:textSize="14dp"
                    android:textColor="#191A1C"
                    android:fontFamily="@font/notosanskr_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="룩북"
                    android:textSize="14dp"
                    android:textColor="#262324"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lookbook_detail_user_layout"
        android:layout_below="@id/lookbook_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lookbook_detail_user_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lookbook_detail_profile_image"
                android:src="@drawable/image_profile_default"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border_circle"/>

            <TextView
                android:id="@+id/lookbook_detail_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userid"
                android:textSize="16dp"
                android:textColor="#191A1C"
                android:fontFamily="@font/notosanskr_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical|end">

            <TextView
                android:id="@+id/lookbook_detail_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="8dp"
                android:text="스트릿룩"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanskr_bold"
                android:background="@drawable/red_button_border"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/lookbook_detail_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="8dp"
                android:text="미니멀룩"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanskr_bold"
                android:background="@drawable/red_button_border"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lookbook_detail_type_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="8dp"
                android:text="시티보이룩"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/notosanskr_bold"
                android:background="@drawable/red_button_border"
                android:visibility="gone"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lookbook_palette"
        android:layout_below="@+id/lookbook_detail_user_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="#FAFAFA">

        <ImageView
            android:id="@+id/lookbook_tops_1_image_view"
            android:layout_width="138.5dp"
            android:layout_height="138.5dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="27.7dp"
            android:layout_gravity="center_horizontal"
            android:translationZ="1dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_tops_1_clothes_detail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="28dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/lookbook_tops_2_image_view"
            android:layout_width="138.5dp"
            android:layout_height="138.5dp"
            android:layout_marginTop="47dp"
            android:layout_marginStart="41.5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_tops_2_clothes_detail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/lookbook_pants_image_view"
            android:layout_width="138.5dp"
            android:layout_height="249.3dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="60dp"
            android:layout_gravity="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_pants_clothes_detail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="70dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/lookbook_shoes_image_view"
            android:layout_width="97dp"
            android:layout_height="83dp"
            android:layout_marginBottom="55.4dp"
            android:layout_marginEnd="55.4dp"
            android:layout_gravity="bottom|end"
            android:translationZ="1dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_shoes_clothes_detail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="45dp"
            android:layout_gravity="bottom|end"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/lookbook_accessories_1_image_view"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="72dp"
            android:layout_marginTop="55.4dp"
            android:translationZ="2dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_accessories_1_clothes_detail"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="63dp"
            android:layout_marginTop="62dp"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/lookbook_accessories_2_image_view"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="55.4dp"
            android:layout_gravity="bottom"
            android:translationZ="1dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_accessories_2_clothes_detail"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="55dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/lookbook_accessories_3_image_view"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="94.2dp"
            android:layout_marginBottom="41.5dp"
            android:layout_gravity="bottom"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lookbook_accessories_3_clothes_detail"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginStart="86dp"
            android:layout_marginBottom="42dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="옷 상세보기"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_medium"
            android:background="@drawable/button_lookbook_clothes_detail"
            android:translationZ="5dp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/see_clothes_detail_button"
            android:src="@drawable/button_see_clothes_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lookbook_detail_like_save_layout"
        android:layout_below="@+id/lookbook_palette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingHorizontal="25dp">

        <ImageButton
            android:id="@+id/unlike_button"
            android:src="@drawable/button_unlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/like_button"
            android:src="@drawable/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/unsave_button"
            android:src="@drawable/button_unsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/save_button"
            android:src="@drawable/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lookbook_detail_like_count_layout"
        android:layout_below="@id/lookbook_detail_like_save_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lookbook_detail_like_count_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="143"
            android:textSize="14dp"
            android:textColor="#191A1C"
            android:fontFamily="@font/notosanskr_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="명"
            android:textSize="14dp"
            android:textColor="#191A1C"
            android:fontFamily="@font/notosanskr_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="이 좋아합니다."
            android:textSize="14dp"
            android:textColor="#191A1C"
            android:fontFamily="@font/notosanskr_regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lookbook_detail_memo_layout"
        android:layout_below="@id/lookbook_detail_like_count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingHorizontal="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lookbook_detail_nickname_memo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:text="userid"
            android:textSize="14dp"
            android:textColor="#191A1C"
            android:fontFamily="@font/notosanskr_bold" />

        <TextView
            android:id="@+id/lookbook_detail_memo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용내용내용내용내용"
            android:textSize="14dp"
            android:textColor="#191A1C"
            android:fontFamily="@font/notosanskr_regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lookbook_detail_comment_button"
        android:layout_below="@id/lookbook_detail_memo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="댓글"
            android:textSize="14dp"
            android:textColor="#8B8B8B"
            android:fontFamily="@font/notosanskr_medium"/>

        <TextView
            android:id="@+id/lookbook_detail_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:text="15"
            android:textSize="14dp"
            android:textColor="#8B8B8B"
            android:fontFamily="@font/notosanskr_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="3dp"
            android:text="개"
            android:textSize="14dp"
            android:textColor="#8B8B8B"
            android:fontFamily="@font/notosanskr_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="모두 보기"
            android:textSize="14dp"
            android:textColor="#8B8B8B"
            android:fontFamily="@font/notosanskr_medium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lookbook_detail_comment_content_layout"
        android:layout_below="@id/lookbook_detail_comment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lookbook_detail_comment_1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lookbook_detail_comment_1_nickname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:text="userid"
                android:textSize="14dp"
                android:textColor="#191A1C"
                android:fontFamily="@font/notosanskr_bold" />

            <TextView
                android:id="@+id/lookbook_detail_comment_1_content"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="오 이쁘네요!"
                android:textSize="14dp"
                android:textColor="#191A1C"
                android:fontFamily="@font/notosanskr_regular"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>